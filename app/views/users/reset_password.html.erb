<% form_for :user, :url => {:action => "reset_password"}, :html => {:class => "form"} do |form| %>
   <h4>Восстановление пароля</h4>
       <p><label for="user_password" >Новый пароль</label><br/>
          <%= form.password_field :password, :size => 45, :class => 'text' %>
       </p>
       <p><label for="user_password_confirmation" >Повторите новый пароль</label><br/>
          <%= form.password_field :password_confirmation, :size => 45, :class => 'text' %>
       </p>
       <p><%= submit_tag "восстановить" %></p>
<% end %>